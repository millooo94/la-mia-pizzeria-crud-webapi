@model PizzaFormModel

@{
	var pizza = Model;
}

<div class="my-container">
	<form method="post" asp-controller="Pizza" asp-action="Create">
		@Html.AntiForgeryToken()
		<div class="mb-3">
			<label asp-for="Pizza.Name" class="form-label fw-bold">Name</label>
			<input type="text" asp-for="Pizza.Name" class="form-control">
			<div class="error">
				<span asp-validation-for="Pizza.Name" class="text error"></span>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="Pizza.Description" class="form-label fw-bold">Description</label>
			<div>
				<textarea asp-for="Pizza.Description" class="w-100"></textarea>
				<div class="error">
					<span asp-validation-for="Pizza.Description" class="text error"></span>
				</div>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="Pizza.Price" class="form-label fw-bold">Price</label>
			<input type="number" step="0.5" asp-for="Pizza.Price" class="form-control">
			<div class="error">
				<span asp-validation-for="Pizza.Price" class="text error"></span>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="Pizza.Img" class="form-label fw-bold">Image</label>
			<input type="text" asp-for="Pizza.Img" class="form-control">
			<div class="error">
				<span asp-validation-for="Pizza.Img" class="text error"></span>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="Pizza.CategoryId">Category</label>
			<select asp-for="Pizza.CategoryId">
				<option value="0"></option>
				@foreach (var cat in Model.Categories)
				{
					<option value="@cat.Id">@cat.Name</option>
				}
			</select>
			<span asp-validation-for="Pizza.CategoryId" class="text error"></span>
		</div>
		<div class="mb-3">
			<label asp-for="SelectedIngredients" class="mb-3">Ingredients</label>
			<select asp-for="SelectedIngredients" multiple="multiple" asp-items="@Model.Ingredients" class="w-100"></select>
		</div>
		<button type="submit">Create</button>
	</form>
</div>