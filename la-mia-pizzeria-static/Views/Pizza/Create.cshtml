<div class="container">
	<div class="pad">
		<form id="pizza-create-form">
			<div class="form-field">
				<label for="name">Name</label>
				<input id="name" />
				<span id="name-errors" class="text error"></span>
			</div>
			<div class="form-field">
				<label for="description">Description</label>
				<textarea id="description"></textarea>
				<span id="description-errors" class="text error"></span>
			</div>
			<div class="form-field">
				<label for="price">Price</label>
				<input id="price" type="number" step="0.5">
				<span id="price-errors" class="text error"></span>
			</div>
			<div class="form-field">
				<label for="category-id">Category</label>
				<select id="category-id">
					<option value="0"></option>
				</select>
				<span id="category-id-errors" class="text error"></span>
			</div>
			<div class="form-field">
				<label>Ingredients</label>
				<div id="ingredients"></div>
			</div>
			<div class="form-field">
				<label for="img">Image</label>
				<input id="img" value="https://picsum.photos/200/300" />
				<span id="img-errors" class="text error"></span>
			</div>
			<button type="submit">Create</button>
		</form>
	</div>
</div>

@section Scripts
	{
	<script>
		loadCategories();
		loadIngredients();
		initCreateForm();
	</script>
}