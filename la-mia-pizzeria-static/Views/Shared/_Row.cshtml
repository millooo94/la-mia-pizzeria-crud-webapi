@model Pizza

@{
    var pizza = Model;
}

<tr>
    <td>@pizza.Id</td>
    <td class="image"><img class="pizza-link-image img-fluid" src="@pizza.Img"></td>
    <td class="title mb-4">
        <a href="@Url.Action("Detail", "Pizza", new { Id = pizza.Id })" class="btn btn-dark">@pizza.Name</a>
    </td>
    <td class="title mb-4">
        <div>@pizza.Price€</div>
    </td>
    <td class="description">@pizza.Description</td>
    <td>@pizza.Category!.Name</td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <a href="@Url.Action("Update", "Pizza", new { Id = pizza.Id })" class="btn btn-warning">Edit</a>
            <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@pizza.Id">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>
    }
</tr>